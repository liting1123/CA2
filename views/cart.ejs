<!-- cart.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Cart</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
      <div class="container-fluid">
        <a class="navbar-brand" href="/dashboard">Foodiess</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/dashboard">Dashboard</a>
            </li>
            <% if (user && user.role === 'admin') { %>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Admin</a>
            </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

  <!-- Cart Content -->
  <div class="container">
    <h2 class="mt-4">Food Order</h2>
    <% if (cart.length === 0) { %>
      <p>Your order is empty.<a href="/menu">Start ordering!</a></p>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < cart.length; i++) { %>
            <tr>
                <td><%= cart[i].name %></td>
                <td><img src="/images/<%= cart[i].image %>" width="80" class="img-thumbnail"></td>
                <td><%= cart[i].quantity %></td>
                <td>$<%= cart[i].price %></td>
                <td>$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>
                <td>
                  <a href="/cart<%= cart[i].idmenuitems %>" onclick="return confirm('Are you sure you want to remove this item?')">Delete</a>
                </td>
            </tr>
            <% total += cart[i].price * cart[i].quantity; %>
          <% }; %>
        </tbody>
      </table>
      <h4>Total: $<%= total.toFixed(2) %></h4>
      <div class="mt-4">
        <a href="/menu" class="btn btn-secondary">Back to Menu</a>
        <form action="/placeOrder" method="POST">
            <input type="hidden" name="totalAmount" value="<%= total.toFixed(2) %>">
            <% cart.forEach(item => { %>
                <input type="hidden" name="cartItems[]" value="<%= JSON.stringify(item) %>">
            <% }); %>
            <button type="submit" class="btn btn-success btn-lg">Place Order</button>
        </form>
      </div>
    <% } %>
  </div>
</body>
</html>
